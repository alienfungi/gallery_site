%li
  %h4= pic.name
  = link_to location_artist_pic_path(location_id: @location, artist_id: pic.artist, id: pic), class: 'th' do
    = image_tag pic.image_url(:thumb)
  %ul.button-group.right
    %li
      = link_to 'edit', edit_location_artist_pic_path(location_id: @location, artist_id: pic.artist, id: pic), class: 'button small secondary'
    %li
      = link_to 'delete',
        location_artist_pic_path(location_id: @location, artist_id: pic.artist, id: pic),
        class: 'button small secondary',
        method: :delete,
        confirm: "Are you sure you wish to completely delete \"#{pic.name}\"?"

